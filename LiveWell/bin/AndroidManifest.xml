<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.livewell"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lwlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.livewell.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.livewell.Profile"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.example.livewell.SampleCalendar"
            android:label="@string/title_activity_sample_calendar" >
        </activity>
        <activity
            android:name="com.example.livewell.SampleDiet"
            android:label="@string/title_activity_sample_diet" >
        </activity>
        <activity
            android:name="com.example.livewell.FoodSnapshot"
            android:label="@string/title_activity_food_snapshot" >
        </activity>
        <activity
            android:name="com.example.livewell.FoodDatabase"
            android:label="@string/title_activity_food_database" >
        </activity>
        <activity
            android:name="com.example.livewell.AddRecord"
            android:label="@string/title_activity_add_record" >
        </activity>
        <activity
            android:name="com.example.livewell.FoodRows"
            android:label="@string/title_activity_food_rows" >
        </activity>
        <activity
            android:name="com.example.livewell.Calculator"
            android:label="@string/title_activity_calculator" >
        </activity>
        <activity
            android:name="com.example.livewell.ManageDiet"
            android:label="@string/title_activity_manage_diet" >
        </activity>
    </application>

</manifest>
