<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:padding="@dimen/activity_margin"
    tools:context=".AddRecord" >
      
	<TextView
	    android:id="@+id/TextView_EnterFood"
	    android:text="Enter Food"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />    

	<TextView
		android:id="@+id/TextView_FoodName"
	    android:layout_width="96dp"
	    android:layout_height="wrap_content"
	    android:text="Food Name" />

	<EditText
	  	android:id="@+id/EditText_foodName"
	    android:layout_width="match_parent"
	    android:layout_height="64dp"
	    android:layout_alignParentRight="true"
	    android:inputType="textPersonName" />
	
	<!-- Serving Size (gram) -->
	<TextView
	    android:layout_width="136dp"
	    android:layout_height="wrap_content"
	    android:text="Nasty Gram"
	    android:textSize="10pt" />

	<EditText
	    android:id="@+id/EditText_nastyGram"
	    android:layout_width="144dp"
	    android:layout_height="wrap_content"
	    android:inputType="textPersonName"
	    android:textColor="#81a3d0"
	    android:textSize="10pt" />
	
	<!--  calorie count -->
	<TextView
		android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:text="Amount of Calories"
	    android:textSize="10pt"/> 

    <EditText
        android:id="@+id/EditText_calCount"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
	    android:textSize="10pt"
        android:layout_alignParentRight="true"/>
    
    <!--  paleo good? -->
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Paleo?"
        android:textSize="10pt" />
    <EditText
        android:id="@+id/EditText_palPoo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="10pt" 
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/Button_SaveRecord"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:text="Save" />
    
    <TextView
	    android:id="@+id/TextView_efoodName"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="10pt"  />
    
    <TextView  
		android:id="@+id/TextView_enastyGram"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:textSize="10pt" 
        android:layout_alignParentRight="true"/>   

</LinearLayout>
