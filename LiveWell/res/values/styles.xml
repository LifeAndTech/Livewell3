<resources>

    <!--Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="title">
    	<item name="android:textColor">@color/title_color</item>
    	<item name="android:textSize">@dimen/title</item>
    </style>
    
    <style name="heading1">
    	<item name="android:textColor">@color/h1_color</item>
    	<item name="android:textSize">@dimen/heading1</item>
    </style>
    
	<style name="heading2">
    	<item name="android:textColor">@color/h2_color</item>
    	<item name="android:textSize">@dimen/heading2</item>
    </style>
    
    <style name="paragraph">
    	<item name="android:textColor">@color/h1_color</item>
    	<item name="android:textSize">@dimen/paragraph</item>
    </style>
    	<style
		name="calendar_event_style"
		parent="@android:style/TextAppearance.Small">
		<item
			name="android:textColor">#FF6600</item>
		<item
			name="android:textStyle">bold
		</item>
		<item
			name="android:textSize">8sp</item>
	</style>
    

</resources>